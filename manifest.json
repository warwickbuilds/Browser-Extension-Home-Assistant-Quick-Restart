{
    "manifest_version": 2,
    "name": "Home Assistant Quick Restart",
    "description": "This extension lets check config and restart Home Assistant with one button quick access",
    "version": "1.0",
    "author": "Warwick Ward // https://warwick.io",
    "homepage_url": "https://warwick.io/browser-extension-homeassistant-quick-restart",
    "background":{
        "scripts":["background.js"]
    },
    "page_action":{
        "default_icon": {
            "16":"images/icon_disabled-16.png",
            "24":"images/icon_disabled-24.png",
            "32":"images/icon_disabled-32.png",
            "48":"images/icon_disabled-48.png",
            "128":"images/icon_disabled-128.png"
        },
        "default_popup": "popup.html",
        "default_title": "Home Assistant Quick Restart"
    },
    "commands": {
        "_execute_page_action": {
          "suggested_key": {
            "default": "Ctrl+Shift+H",
            "mac": "MacCtrl+Shift+H"
          },
          "description": "Quick Restart Home Assistant"
        }
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js":      ["content.js"]
    }],
    "permissions": [
        "activeTab"
    ]
}